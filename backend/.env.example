# Backend Environment Variables

# App Configuration
APP_NAME=BlueMind Ocean Restoration API
ENVIRONMENT=production
DEBUG=False

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# For SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///./bluemind.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# CORS - Add your frontend URL(s)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-url.onrender.com

# AI/ML Settings
ENABLE_AI_PREDICTIONS=True
MODEL_UPDATE_INTERVAL=300

# IoT Sensors
SENSOR_UPDATE_INTERVAL=5
ENABLE_SENSOR_SIMULATION=True

# Server
PORT=8000
HOST=0.0.0.0
